.Card
  min-width 300px
  width 75vw
  display flex
  flex-direction row
  flex-wrap: wrap
  background rgba(255, 237, 230, 0.65)
  border-radius 45px
  margin 2vw

  .TextSide
    width 50%
    height 100%
    position relative
    display flex
    flex-direction column
    align-items center
    gap 20px
    // justify-content space-evenl

    .CardTitle
      margin-left 50px
      margin-top 20px
      width 90%
      min-height 40px

      font-family Alef
      font-size 36px
      line-height 49px
      letter-spacing -0.005em

      color #000000

    .CardInfo
      margin-left 50px
      margin-top 20px
      width 90%

      font-family Alef
      font-style normal
      font-weight normal
      font-size 20px
      line-height 27px
      display flex
      text-align justify


  .ImgSide
    width 50%
    height 100%
    display flex
    align-items center
    img
      margin-top 50px
      margin-left auto
      margin-right auto
      max-height 350px

  .CreateButtonContainer
    width 100%
    margin 20px
    .CreateButton
      margin-left auto
      margin-right auto

  @media screen and (max-width 950px)
      .TextSide
        width 100%
        .CardTitle
          width 50%
        .CardInfo
          width 70%
      .ImgSide
        width 100%
        height 50%
        img
          max-width 70%
